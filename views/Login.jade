extends layout

block content
  div.loginAndSignUp
    h1.loginAndSignUpTitle Your StatTracker 

    h2= title
    form(action="/", method="post")
      p Username  
        input(type="text", name="username", placeholder="username")
      p Password  
        input(type="text", name="password", placeholder="password")
      button(type="submit")
        span Login
    br
    a(href="/signup")
      span Create your Account