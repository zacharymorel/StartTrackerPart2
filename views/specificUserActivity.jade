extends layout

block content
    nav
        a.Home(href="/home") Home
        a.yourActivities(href="/useractivity") Your Activities
        a.logout(href="/logout") Logout
    
    div.everything

        h2= ActivityId
            |   Activity 
        p= Count
            |   Count: 
        p= DateCompleted
            |   DateCompleted:
        p= createdAt
            |   Created at:
        p= updatedAt
            |   Updated at:
    
        div.specificActivityList 
            h3 Updating this Activity
            form(action="/api/activities/:id/update", method="post")
                input(type="number", name="Count", value="#{Count}")
                input(type="hidden", name="ActivityId", value="#{ActivityId}")
                button.updateActivity(type="submit") Update
         

        div.specificActivityList
            h3 Deleting this Activity for your tracked list
            form(action="/api/activities/:id/delete", method="post")
                input.ActivityDonesId(name="ActivityId", value="#{ActivityId}", type="hidden")
                button.delete(type="submit") Delete
    